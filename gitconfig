[user]
	name = Eric Mueller
	email = emueller@emcien.com

[core]
  pager = cat
	excludesfile = ~/.gitignore

[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  branch = magenta

[github]
  user = nevinera

[alias]
  ar = add -A
  amend = commit --amend
  l   = log --pretty=tformat:"%h%x09%Cblue%ad%x20%C(yellow)%an%x09%Creset%s" --date=short -n 5
  ll  = log --pretty=tformat:"%h%x09%Cblue%ad%x20%C(yellow)%an%x09%Creset%s" --date=short -n 30
  lll = log --pretty=tformat:"%h%x09%Cblue%ad%x20%C(yellow)%an%x09%Creset%s" --date=short -n 500
  lm  = log --pretty=tformat:"%h%x09%Cblue%ad%x20%C(yellow)%an%x09%Creset%s" --date=short -n 30 --author=mueller
  contains = branch --contains
  cm = commit -m
  stat = status
  d = diff
  b = branch
  co = checkout
  stat = status --short
  rh = reset --hard
  r = reset
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -n 40 --date=relative
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
  default = tracking
